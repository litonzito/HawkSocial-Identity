@model EditPostViewModel

@{
    ViewData["Title"] = "Editar Post";
}

<h2>Editar Post</h2>

<form  asp-controller="Posts" asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" maxlength="140"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-controller="Posts" asp-action="Feed" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
